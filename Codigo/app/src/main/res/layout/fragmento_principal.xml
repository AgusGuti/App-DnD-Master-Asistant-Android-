<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calaverasss"
    tools:context="com.guti.agus.rusodnd.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/d4.bttn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="37dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/d4" />

        <ImageButton
            android:id="@+id/d6.bttn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/d6"
            tools:layout_editor_absoluteX="136dp" />

        <ImageButton
            android:id="@+id/d8.bttn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="37dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/d8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/visor.txt"
            android:layout_width="166dp"
            android:layout_height="49dp"
            android:layout_marginEnd="97dp"
            android:layout_marginStart="97dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:hint="Â¡A Rollear!"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="149dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/d12.bttn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/play_ambiente_bttn"
            app:layout_constraintEnd_toStartOf="@+id/clr_bttn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visor.txt"
            app:srcCompat="@drawable/d12" />

        <Button
            android:id="@+id/clr_bttn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:text="Clr/Stop"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toTopOf="@+id/spinnerAmbiente"
            app:layout_constraintTop_toBottomOf="@+id/visor.txt"
            tools:layout_editor_absoluteX="135dp" />

        <ImageButton
            android:id="@+id/d20.bttn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="27dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/spinnerAmbiente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clr_bttn"
            app:layout_constraintTop_toBottomOf="@+id/visor.txt"
            app:srcCompat="@drawable/d20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/play_ambiente_bttn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/play_clima_bttn"
            app:layout_constraintEnd_toStartOf="@+id/spinnerAmbiente"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/playmusic" />

        <CheckBox
            android:id="@+id/loopAmbiente_check"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="28dp"
            android:layout_weight="3"
            android:text="Loop"
            android:textColor="@android:color/holo_orange_dark" />

        <Spinner
            android:id="@+id/spinnerAmbiente"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@color/my_spinner_text_color"
            app:layout_constraintBottom_toTopOf="@+id/spinnerClima"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/play_clima_bttn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/play_efectos_bttn"
            app:layout_constraintEnd_toStartOf="@+id/spinnerClima"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/playmusic" />

        <CheckBox
            android:id="@+id/loopClima_check"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="28dp"
            android:layout_weight="3"
            android:text="Loop"
            android:textColor="@android:color/holo_orange_dark" />

        <Spinner
            android:id="@+id/spinnerClima"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@color/my_spinner_text_color"
            app:layout_constraintBottom_toTopOf="@+id/spinnerEfectos"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/play_efectos_bttn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/spinnerEfectos"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/playmusic" />

        <CheckBox
            android:id="@+id/loopEfectos_check"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="28dp"
            android:layout_weight="3"
            android:text="Loop"
            android:textColor="@android:color/holo_orange_dark" />

        <Spinner
            android:id="@+id/spinnerEfectos"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@color/my_spinner_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</LinearLayout>
